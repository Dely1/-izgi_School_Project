@model List<Çizgi_School_Project.Models.TblStudent>
@{
    Layout = null;
}


<link href="~/Content/bootstrap.css" rel="stylesheet" />
<div class="container">

    <h1> Öğrenci Listesi</h1>
    <table class="table table=bordered">
        <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad</th>
        <th>Soyad</th>     
        <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>@item.StudentId</td>
        <td><img src="@item.İmage" style="width: 50px; border-radius:50%;" /></td>
        <td>@item.Name</td>
        <td>@item.SurName</td>

        <td><a href="/Student/DeleteStudent/@item.StudentId" class="btn btn-danger">Sil</a></td>
        <td><a href="/Student/DeleteStudent/@item.StudentId" class="btn btn-success">Güncelle</a></td>
    </tr>
         }

    </table>

    <a href="/Student/AddStudent/"class="btn btn-primary">Yeni Öğrenci Kaydı</a>


</div>